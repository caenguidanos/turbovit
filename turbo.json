{
   "$schema": "https://turborepo.org/schema.json",
   "pipeline": {
      "build": {
         "dependsOn": ["^build"],
         "outputs": ["dist/**"]
      },
      "lint": {
         "outputs": []
      },
      "dev": {
         "dependsOn": ["^build"],
         "cache": false
      },
      "app#dev": {
         "dependsOn": ["style-color#lint", "style-font#lint", "style-preflight#lint"],
         "cache": false
      },
      "ui-button#build": {
         "dependsOn": ["style-color#lint", "style-font#lint", "style-preflight#lint"],
         "outputs": ["dist/**"]
      }
   }
}
